$src = '../fonts/gt walsheim/'
$name = 'gt-walsheim'

font(name, type, weight, style)
  font-family name
  src url($src + name + type + '.eot?#iefix') format('embedded-opentype'),
      url($src + name + type + '.otf') format('opentype'),
      url($src + name + type + '.woff') format('woff'),
      url($src + name + type + '.ttf') format('truetype')
  font-weight weight
  font-style style

@font-face
  font($name,'-light', 300, normal)

@font-face
  font($name,'-regular', 400, normal)

@font-face
  font($name,'-medium', 500, normal)

@font-face
  font($name,'-bold', 700, normal)

@font-face
  font($name,'-ultra-bold', 800, normal)

