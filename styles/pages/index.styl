.section
  margin-bottom $main-offset

.h2
  line-height 1.2
  overflow hidden
  .blast
    display inline-block
    transition all .5s
    transform translateY(40px)
    &:nth-child(1)
      transition-delay .1s
    &:nth-child(2)
      transition-delay .2s
    &:nth-child(3)
      transition-delay .3s
    &:nth-child(4)
      transition-delay .4s
    &:nth-child(5)
      transition-delay .5s
    &:nth-child(6)
      transition-delay .6s
  &--hidden
    .blast
      opacity 0
  &--visible
    .blast
      opacity 1
      transform none
  

.services
  &__left
    position sticky
    top 5rem
  .service
    &__img
      display block
      margin-bottom 2.4rem
      // transition all .3s
      img
        display block
        width 100%
    &__title
      font-weight 800
      margin-bottom 1.6rem
      position relative
    &__line
      background-color $primary
      height 3px
      margin-bottom 1.6rem
      max-width 4.8rem
      width 0
    &__price
      display block
      margin-bottom .8rem
    // &:hover
    //   .service
    //     &__img
    //       clip-path inset(5%)

.about
  &__img
    background url('../../img/about.jpg') no-repeat center
    background-size cover
    height 60rem
    // width 70rem
    left 0
    position absolute
    width (700 / 1900 * 100)%
  .h2
    text-align left

.insta
  &__img
    position relative
    img
      display block
  &__icon
    align-items center
    background-color rgba(#fff, .2)
    border-radius 50%
    bottom 1.6rem
    circle(4rem)
    display flex
    justify-content center
    opacity 0
    position absolute
    right 1.6rem
    .svg
      transform translateY(-1px)






